{
    "name": "nextcloud/stationeryapp",
    "description": "Simple application for the management of a small business stationery",
    "type": "project",
    "license": "AGPL",
    "authors": [
        {
            "name": "Davide Pasquadibisceglie"
        }
    ],
    "config": {
		"optimize-autoloader": true,
		"classmap-authoritative": true,
		"platform": {
			"php": "7.4"
		}
	},
    "scripts": {
		"cs:fix": "php-cs-fixer fix",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"lint": "find . -name \\*.php -not -path './vendor/*' -exec php -l \"{}\" \\;"
	},
    "require": {},
    "require-dev": {
        "nextcloud/coding-standard": "^0.5.0",
        "phpunit/phpunit": "^8"
    }
}
